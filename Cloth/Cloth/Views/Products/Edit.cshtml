@model Cloth.Models.Product

@{
    ViewBag.Title = "Edit";
}

<style>
    h2 {
        margin-top: 50px;
    }

    #form_items {
        display: flex;
        justify-content: center;
        padding-top: 20px;
        padding-bottom: 20px
    }

    #form_items > * {
        float: none;
    }

</style>


